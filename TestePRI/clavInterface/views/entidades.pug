extends layout

block content
    .w3-container
        .w3-card-4        
            header.w3-container.w3-teal
                h3 Lista de Entidades
            .w3-container
                table.w3-table-all
                    tr
                        th Sigla
                        th Designação
                        th Estado
                        th Internacional
                        th SIOE
                    each entidade in listaEntidades
                        tr
                            td
                                a(href="/entidades/"+entidade.id)= entidade.sigla
                            td= entidade.designacao
                            td= entidade.estado
                            if entidade.sioe
                                td= entidade.sioe
                            else 
                                td Não
                            if entidade.internacional
                                td= entidade.internacional
                            else 
                                td Não

            footer.w3-container.w3-teal 
                address Gerado por CLAV: Classificação e Avaliação da Informação Pública
                a(href='/') Voltar à página principal
