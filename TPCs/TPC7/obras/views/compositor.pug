extends layout

block content
    .w3-container
        .w3-card-4        
            header.w3-container.w3-teal
                h3 Lista de Obras
            .w3-container
                table.w3-table-all
                    each obra in compositor
                        tr
                            th Nome
                            td= obra.nome
                        tr
                            th Descrição
                            td= obra.desc
                        tr
                            th Ano Criação
                            td= obra.anoCriacao
                        tr
                            th Período
                            td= obra.periodo
                        tr
                            th Duração
                            td= obra.duracao
                        tr 
                            th --------
                
            footer.w3-container.w3-teal 
                address Gerado por Gestão de Obras App:
                    a(href='/compositores') Voltar à lista de compositores