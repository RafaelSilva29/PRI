extends layout
block content
    .w3-container
        .w3-card-4        
            header.w3-container.w3-teal
                h3 Aluno Individual
            .w3-container
                table.w3-table-all
                    tr
                        th Identificador
                        th Nome
                        th Curso
                    tr
                        td= aluno.identificador
                        td= aluno.nome
                        td= aluno.curso
                header.w3-container.w3-teal
                  h4 Lista de Notas
                table.w3-table-all
                    tr
                        th Indicador
                        th Nota
                        th Operações
                    each no in aluno.notas
                      tr
                          td= no.indicador
                          td= no.nota
                          td 
                                button.w3-button.w3-circle.w3-blue-grey(onclick="apagarNota('" + no.indicador + "|" + aluno.identificador + "')") Apagar

        .w3-card-4
            header.w3-container.w3-teal
                h3 Registo de Nota
            .w3-container
                form.w3-container(action='/aluno/'+aluno.identificador+'/nota' method='POST')
                    label
                        b Indicador
                    input.w3-input.w3-border.w3-light-grey(type="text" name='indicador')
                    label
                        b Nota
                    input.w3-input.w3-border.w3-light-grey(type="text" name='nota')
                    input.w3-btn.w3-blue-grey(type="submit" value="Adicionar" allign="center")
       
            footer.w3-container.w3-teal 
                address Gerado por Gestão de Alunos App:
                    a(href='/alunos') Voltar à página principal

