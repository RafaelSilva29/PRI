extends layout

block content
    .w3-container
        .w3-card-4        
            header.w3-container.w3-teal
                h3 Lista de Obras
            .w3-container
                table.w3-table-all
                    tr
                        th Nome
                        th Descrição
                        th Ano Criação
                        th Periodo
                        th Compositor
                        th Duração
                    each obra in lista
                        tr
                            td= obra.nome
                            td= obra.desc
                            td= obra.anoCriacao
                            td= obra.periodo
                            td= obra.compositor
                            td= obra.duracao
                            
            footer.w3-container.w3-black
                address Gerado por Gestão de Obras App:
                    a(href='/') Voltar à página principal
